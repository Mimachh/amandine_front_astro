---
const { aClasses, liClasses } = Astro.props;

import { getPrimaryMenu, type PrimaryMenuData } from "@/lib/api/menus";
import { cn } from "@/lib/utils";

const { menuItems } = (await getPrimaryMenu()) as PrimaryMenuData;

const { slug } = Astro.params;

---

{
    menuItems.edges.map((item) => (
     
      <li class={liClasses}>
        <a
          href={item.node.path}
          class={cn('relative py-1 transition-all duration-500 hover-underline-link ',
            aClasses, slug === item.node.connectedNode.node.slug ? 'text-primary before:w-full before:opacity-100 before:bg-gradient-to-r before:from-primary before:via-pink-700 before:to-lime-500' : 'hover:before:w-full hover:before:opacity-100 before:w-0 before:opacity-0 before:bg-accent-foreground')}
        >
          {item.node.label}
        </a>
      </li>
    ))
  }