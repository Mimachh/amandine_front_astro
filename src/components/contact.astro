                                                xmlns="http://www.w3.org/2000/svg"
                                                class="hover:stroke-primary hover:scale-[130%] transition-all duration-150 ease cursor-pointer"
                                                width="24"
                                                height="24"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
