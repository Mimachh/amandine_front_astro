---
import Background from "@/components/layouts/Background.astro"
import type { AboutSection } from "@/lib/api/mainPage";

const { about } = Astro.props;
const aboutData = about as AboutSection


---
    <div class="mt-24 pb-12" itemscope itemtype="https://schema.org/Person">
        <!-- Content section -->
        <div class="mt-32 overflow-hidden sm:mt-40">
            <div class="mx-auto max-w-7xl px-6 lg:flex lg:px-8">
                <div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-12 gap-y-16 lg:mx-0 lg:min-w-full lg:max-w-none lg:flex-none lg:gap-y-8" >
                    <div class="lg:col-end-1 lg:w-full lg:max-w-lg lg:pb-8">
                        <h2
                            class="text-3xl font-bold tracking-tight text-primary sm:text-4xl"
                        >
                           {aboutData.titre}
                        </h2>
                        <p class="mt-6 text-xl leading-8 text-muted-foreground"
                        itemprop="name"
                        >
                            {aboutData.sousTitre}
                        </p>
                        <p class="mt-6 text-base leading-7 text-muted-foreground/80"
                        itemprop="description"
                        >
                            {aboutData.description}
                        </p>
                        <div class="flex items-center justify-center gap-2 mt-8 px-6 py-10 bg-background">
                            <p class="text-base leading-7 text-secondary-foreground font-medium">Certifi√©e par : <span class="sr-only" itemprop="credentialAwarded">Academee</span></p>
                            <img src="/academee.svg" alt="Logo d'academee" class="w-[150px] md:w-[220px] h-auto" itemprop="educationalCredentialAwarded">
                        </div>
                        
                    </div>
                    <div
                        class="flex flex-wrap items-start justify-end gap-6 sm:gap-8 lg:contents"
                    >
                        <div
                            class="w-0 flex-auto lg:ml-auto lg:w-auto lg:flex-none lg:self-end"
                        >
                            <img
                                src={aboutData.imagePrincipale.sourceUrl}
                                alt={aboutData.imagePrincipale.altText}
                                class="aspect-[7/5] w-[37rem] max-w-none rounded-2xl bg-gray-50 object-cover object-right md:object-center"
                            />
                        </div>
                        <div
                            class="contents lg:col-span-2 lg:col-end-2 lg:ml-auto lg:flex lg:w-[37rem] lg:items-start lg:justify-end lg:gap-x-8"
                        >
                            <div
                                class="order-first flex w-64 flex-none justify-end self-end lg:w-auto"
                            >
                                <img
                                    src={aboutData.imageBasGauche.sourceUrl}
                                    alt={aboutData.imageBasGauche.altText}
                                    class="aspect-[4/3] w-[24rem] max-w-none flex-none rounded-2xl bg-gray-50 object-cover"
                                />
                            </div>
                            <div
                                class="flex w-96 flex-auto justify-end lg:w-auto lg:flex-none"
                            >
                                <img
                                    src={aboutData.imageBasMilieu.sourceUrl}
                                    alt={aboutData.imageBasMilieu.altText}
                                    class="aspect-[7/5] w-[37rem] max-w-none flex-none rounded-2xl bg-gray-50 object-cover"
                                />
                            </div>
                            <div
                                class="hidden sm:block sm:w-0 sm:flex-auto lg:w-auto lg:flex-none"
                            >
                                <img
                                    src={aboutData.imageBasDroite.sourceUrl}
                                    alt={aboutData.imageBasDroite.altText}
                                    class="aspect-[4/3] w-[24rem] max-w-none rounded-2xl bg-gray-50 object-cover"
                                />
                            </div>
                        </div>
                    </div>
                </div>
            
            </div>
        </div>
</div>



