    author: {
      name: 'Sarah L.',
      handle: 'lesliealexander',
      imageUrl:
        'https://images.unsplash.com/photo-1636406269177-4827c00bb263?w=256&h=256&q=80&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTB8fHZpc2FnZSUyMGZlbW1lfGVufDB8fDB8fHwy',
